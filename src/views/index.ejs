<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%-  include("partials/head") -%>
    <title>Pinterest</title>
</head>
<body>
    <div class="container p-4 d-flex h-100 align-items-center">
        <div class="row">
            <% images.forEach(function(image) { %>
                <div class="col-md-4 p-2">
                    <div class="card animate__fadeInDown">
                        <img src="<%= image.path %>" alt="<%= image.title %>" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><%= image.title %></h5>
                            <p class="card-text"><%= image.description %></p>
                            <a href="/image/<%= image._id %>" class="btn btn-primary w-100">See more</a>
                        </div>
                    </div>      
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>